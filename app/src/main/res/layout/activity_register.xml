<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/white_toolbar"   /><!--toolbar距顶部56dp-->

    <RelativeLayout android:id="@+id/RelativeLayout01"
        android:layout_marginTop="76dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText android:id="@+id/register_edit_account"
            android:paddingLeft="56sp"
            android:saveEnabled="true"
            android:layout_width="326dp"
            android:layout_height="36.67dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:hint="请输入账号"
            android:textSize="12.67dp"
            android:textColor="#757575"
            android:maxLength="11"
            android:background="@android:drawable/editbox_background_normal"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:textColor="#ff3f3f3f"
            android:gravity="center_vertical"
            android:id="@+id/TextView01"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0sp"
            android:text="账号:"
            android:textSize="12.67dp"

            android:layout_alignLeft="@+id/register_edit_account"
            android:layout_alignTop="@+id/register_edit_account"
            android:layout_alignBottom="@+id/register_edit_account" />
    </RelativeLayout>



    <RelativeLayout android:id="@+id/RelativeLayout02"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/RelativeLayout01"
        android:layout_marginTop="20dp">

        <EditText android:id="@+id/register_edit_password"
            android:paddingLeft="56sp"
            android:saveEnabled="true"
            android:layout_width="326dp"
            android:layout_height="36.67dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:hint="不少于6位"
            android:textSize="12.67dp"
            android:textColor="#757575"
            android:maxLength="11"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_alignParentTop="true"
            android:inputType="textPassword" />
        <TextView
            android:textColor="#ff3f3f3f"
            android:gravity="center_vertical"
            android:id="@+id/TextView02"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0sp"
            android:text="密码:"
            android:textSize="12.67dp"
            android:layout_alignLeft="@+id/register_edit_password"
            android:layout_alignTop="@+id/register_edit_password"
            android:layout_alignBottom="@+id/register_edit_password" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/RelativeLayout03"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/RelativeLayout02"
        android:layout_marginTop="20dp">

        <EditText android:id="@+id/register_confirm_password"
            android:paddingLeft="70sp"
            android:saveEnabled="true"
            android:layout_width="326dp"
            android:layout_height="36.67dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:hint="请确认密码"
            android:textSize="12.67dp"
            android:textColor="#757575"
            android:maxLength="11"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_alignParentTop="true"
            android:inputType="textPassword" />
        <TextView
            android:textColor="#ff3f3f3f"
            android:gravity="center_vertical"
            android:id="@+id/TextView03"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0sp"
            android:text="确认密码:"
            android:textSize="12.67dp"
            android:layout_alignLeft="@+id/register_confirm_password"
            android:layout_alignTop="@+id/register_confirm_password"
            android:layout_alignBottom="@+id/register_confirm_password" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout04"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/RelativeLayout03"
        android:layout_marginTop="20dp">

        <EditText android:id="@+id/register_edit_name"
            android:paddingLeft="56sp"
            android:saveEnabled="true"
            android:layout_width="326dp"
            android:layout_height="36.67dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:hint="请输入昵称"
            android:textSize="12.67dp"
            android:textColor="#757575"
            android:maxLength="11"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_alignParentTop="true" />
        <TextView
            android:textColor="#ff3f3f3f"
            android:gravity="center_vertical"
            android:id="@+id/TextView04"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0sp"
            android:text="昵称:"
            android:textSize="12.67dp"
            android:layout_alignLeft="@+id/register_edit_name"
            android:layout_alignTop="@+id/register_edit_name"
            android:layout_alignBottom="@+id/register_edit_name" />

    </RelativeLayout>

    <Button
        android:id="@+id/boy_button"
        android:layout_width="150dp"
        android:layout_height="36.67dp"
        android:layout_alignStart="@+id/RelativeLayout04"
        android:layout_below="@+id/RelativeLayout04"
        android:layout_marginTop="20dp"
        android:text="男"
        android:background="@drawable/green_button"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/girl_button"
        android:layout_width="150dp"
        android:layout_height="36.67dp"
        android:layout_alignEnd="@+id/RelativeLayout04"
        android:layout_below="@+id/RelativeLayout04"
        android:layout_marginTop="20dp"
        android:text="女"
        android:background="@drawable/green_button"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:layout_width="320dp"
        android:layout_height="36.67dp"
        android:text="确定"
        android:textSize="14dp"
        android:textColor="#FFFFFF"
        android:id="@+id/register_ensure_button"
        android:background="@drawable/green_button"
        android:layout_below="@+id/boy_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>