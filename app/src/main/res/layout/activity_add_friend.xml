<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#7f000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/searchview_gray_floor">

        <EditText
            android:id="@+id/search_edit"
            android:saveEnabled="true"
            android:layout_width="wrap_content"
            android:layout_height="30.67dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/search_button"
            android:layout_marginRight="10dp"
            android:paddingLeft="33sp"
            android:layout_centerVertical="true"
            android:background="@drawable/searchview_bg"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:hint="请输入对方的登陆账号查询"
            android:textSize="12.67dp"
            android:textColor="#757575"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search_icon"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/search_edit"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:id="@+id/search_button"
            android:textSize="11.33sp"
            android:textColor="#9EA3AA"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>
</FrameLayout>