<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/recycler_item_selector">

    <ImageView
        android:id="@+id/my_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/my_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/my_item_image"
        android:textSize="14sp"
        android:layout_marginStart="26dp"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/my_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22.67dp"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/goto_icon_gray" />

</RelativeLayout>