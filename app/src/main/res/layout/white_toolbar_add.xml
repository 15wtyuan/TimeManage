<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/white_toolbar_add"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:navigationIcon="@mipmap/navigationicon_green"
    android:navigationIcon="@mipmap/navigationicon_green"
    android:layout_height="56dp"
    android:background="@drawable/toobar_bg_white"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_to_net"
            android:layout_alignBottom="@+id/add_to_net"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16.67sp" />

        <Button
            android:id="@+id/add_to_net"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/green_button"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="16.67sp"
            android:radius="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>